{
    
    "manifest_version":2,
    "name": "Box Critters Texture Pack Manager",
    "version_name":"1.2.0 beta",
    "version":"1.2.0.072",
    "author": "TumbleGamer",
    "icons": { "16": "logo-16.png",
        "48": "logo-48.png",
       "128": "logo-128.png" },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "BC Texture Pack Manager"
    },
    "background": {
        "page": "bg/background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://boxcritters.com/*",
                "https://boxcritters.github.io/*"
            ],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "webRequest", "webRequestBlocking","storage","https://boxcritters.com/*","tabs"
    ]
}